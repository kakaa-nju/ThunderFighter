{
    "name": "MAA-ThunderFighter",
    "version": "0.9.4",
    "custom_title": "雷霆战机长草助手",
    "controller": [
        {
            "name": "安卓端",
            "type": "Adb"
        }
    ],
    "resource": [
        {
            "name": "官服",
            "path": [
                "{PROJECT_DIR}/resource"
            ]
        }
    ],
    "agent": {
        "child_exec": "python",
        "child_args": [
            "{PROJECT_DIR}/agent/main.py"
        ]
    },
    "task": [
        {
            "name": "启动",
            "entry": "启动雷霆战机"
        },
        {
            "name": "领取商城奖励",
            "entry": "点击商城"
        },
        {
            "name": "无尽对战",
            "entry": "无尽模式",
            "advanced": [
                "重复次数"
            ]
        }
    ],
    "option": {},
    "advanced": {
        "重复次数": {
            "field": [
                "x"
            ],
            "type": [
                "int"
            ],
            "default": [
                "5"
            ],
            "pipeline_override": {
                "SetReplaysTimes": {
                    "custom_action_param": {
                        "count": 1,
                        "target_count": 5,
                        "next_node": [],
                        "else_node": [
                            "金币赛场"
                        ],
                        "count_msg": "当前次数: {count}, 目标次数: {target_count}"
                    }
                }
            }
        }
    }
